{
    "manifest_version": 3,
    "name": "CrossHelp",
    "description": "Chrome extension for math copying, markdown viewing, and NTP",
    "version": "1.0.0",
    "action": {
        "default_popup": "./src/popup/index.html",
        "default_title": "CrossHelp"
    },
    "chrome_url_overrides": {
        "newtab": "./src/newtab/index.html"
    },
    "background": {
        "service_worker": "./src/runtime/index.ts",
        "type": "module"
    },
    "icons": {
        "512": "assets/512x.png"
    },
    "permissions": [
        "tabs",
        "storage",
        "activeTab",
        "scripting",
        "clipboardWrite",
        "clipboardRead",
        "contextMenus",
        "nativeMessaging",
        "tabCapture",
        "downloads",
        "offscreen",
        "webNavigation"
    ],
    "content_security_policy": {
        "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'; frame-src https://u2re.space https://*.u2re.space *;"
    },
    "host_permissions": [
        "<all_urls>",
        "file://**/*",
        "file:///**/*",
        "https://u2re.space/*",
        "https://*.u2re.space/*"
    ],
    "content_scripts": [{
        "matches": ["<all_urls>", "file:///**/*", "file://**/*"],
        "js": ["./src/content/index.ts"],
        "run_at": "document_start"
    }],
    "web_accessible_resources": [{
        "resources": [
            "src/markdown/viewer.html",
            "assets/*"
        ],
        "matches": ["<all_urls>"]
    }]
}
